= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :effective_term
    = f.text_field :effective_term
  .field
    = f.label :effective_value
    = f.text_field :effective_value
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
