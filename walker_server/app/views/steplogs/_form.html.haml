= form_for @steplog do |f|
  - if @steplog.errors.any?
    #error_explanation
      %h2= "#{pluralize(@steplog.errors.count, "error")} prohibited this steplog from being saved:"
      %ul
        - @steplog.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :userhash
    = f.text_field :userhash
  .field
    = f.label :step
    = f.number_field :step
  .actions
    = f.submit 'Save'
